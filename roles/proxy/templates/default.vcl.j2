# and http://varnish-cache.org/trac/wiki/VCLExamples for more examples.

# Marker to tell the VCL compiler that this VCL has been adapted to the
# new 4.0 format.
vcl 4.0;

import directors;

{% for website in websites %}
  {% for container in website.containers %}
    backend {{ website.id }}_{{ loop.index }} {
      .host = "{{ container.host }}";
      .port = "{{ container.port }}";
    }
  {% endfor %}
{% endfor %}

sub vcl_init {
  {% for website in websites %}
    new {{ website.id }} = directors.round_robin();
    {% for container in website.containers %}
      {{ website.id }}.add_backend({{ website.id }}_{{ loop.index }});
    {% endfor %}
  {% endfor %}
}

sub vcl_recv {
  {% for website in websites %}
    {% for domain in website.domains %}
      if (req.http.host == "{{ domain }}") {
        set req.backend_hint = {{ website.id }}.backend();
      }
    {% endfor %}
  {% endfor %}
}

sub vcl_backend_response {
}

sub vcl_deliver {
}
